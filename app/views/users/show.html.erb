<h1><%= @user.username %>'s page</h1>

<ul>
  <p>Name: <%= @user.full_name %></p>
  <p>Email: <%= @user.email %></p>
  <p>Address:</p> <%= display_address(@user) %>

  <% if @user.pets %>
    <p><%= link_to "#{@user.username}'s pets", user_pets_path(@user) %></p><br>
  <% end %>
</li>

<% if current_user == @user %>
  <%= link_to 'Edit Account Info', edit_user_path(current_user), class: "btn btn-light mb-3" %><br>
  <%= link_to 'Delete Account', @user, class: "btn btn-light mb-3", method: :delete, data: { confirm: 'Are you sure you would like to delete your account?' } %>
<% end %>
