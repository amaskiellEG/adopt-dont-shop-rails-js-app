<h1><%= @user.username %>'s page</h1>

<ul>
  <p>Name: <%= @user.full_name %></p>
  <p>Email: <%= @user.email %></p>
  <p>Address:</p> <%= @user.address.full_address.html_safe %>

  <% if @user.pets %>
    <h3><%= @user.username %>'s pets:</h3><br>
    <% @user.pets.each do |pet| %>
      <%= render partial: 'layouts/pet', locals: {pet: pet} %>
    <% end %>
  <% end %>
  <%= link_to "Add a pet!", new_user_pet_path(@user), class: "btn btn-light mb-3" %><br>
</li>

<% if current_user == @user %>
  <%= link_to 'Edit Account Info', edit_user_path(current_user), class: "btn btn-light mb-3" %><br>
  <%= link_to 'Delete Account', @user, class: "btn btn-light mb-3", method: :delete, data: { confirm: 'Are you sure you would like to delete your account?' } %>
<% end %>
