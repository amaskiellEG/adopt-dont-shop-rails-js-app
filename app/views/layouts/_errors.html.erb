<% if !resource.nil? && resource.errors.any? %>
  <div id="error_explanation">
    <h4>There were some errors with the information you entered:</h4>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <p class="bg-warning text-dark"><%= message %></p>
      <% end %>
    </ul>
  </div>
<% end %>
