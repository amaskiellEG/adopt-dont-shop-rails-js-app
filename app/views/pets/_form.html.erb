<%= form_for @pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :nickname %>
  <%= f.text_field :nickname %><br>
  <%= f.label :animal %>
  <%= f.text_field :animal %><br>
  <%= f.label :age %>
  <%= f.number_field :age %><br>
  <%= f.label :breed %>
  <%= f.text_field :breed %><br>
  <%= f.label "Any stories or info you'd like to share?" %><br>
  <%= f.text_area :info %><br>

  <% if current_employee %>
    <%= f.hidden_field :owner_id, value: current_employee.id %>
    <%= f.hidden_field :owner_id, value: "Employee" %>
    <%= f.label "Which employee(s) will primarily take care of this animal?" %>
    <%= f.collection_check_boxes :caretaker_ids, @shelter.employees, :id, :username %>
  <% elsif current_user %>
    <%= f.hidden_field :owner_id, value: current_user.id %>
    <%= f.hidden_field :owner_type, value: "User" %>
  <% end %>

  <%= f.submit class: "btn btn-light mb-3" %>
<% end %>
