<%= form_for employee do |f| %>
  <%= f.label :first_name %>
  <%= f.label :last_name %>
  <%= f.label :username %>
  <%= f.label :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label "For which shelter do you work?" %>
  <%= f.collection_check_boxes :shelter_ids, Shelter.all, :id, :name %>
  <%= f.label "Don't see your employer? Add info about yours below:" %>

  <%= f.fields_for :shelter, employee.shelter.build do |shelter_fields| %>
    <%= shelter_fields.label :name %>
    <%= shelter_fields.text_field :name %>

    <!-- need to incorporate adding address... -->
  <% end %>

  <%= f.fields_for :address, employee.shelter.address.build do |address_fields| %>
    <%= address_fields.label :street1 %>
    <%= address_fields.text_field :street1 %>
    <%= address_fields.label :street2 %>
    <%= address_fields.text_field :street2 %>
    <%= address_fields.label :city %>
    <%= address_fields.text_field :city %>
    <%= address_fields.label :state %>
    <%= address_fields.text_field :state %>
    <%= address_fields.label :zip %>
    <%= address_fields.text_field :zip %>
  <% end %>

  <%= f.submit %>
<% end %>
