<div class="home">
  <h1 class="p-3 text-light page-header">Welcome to Adopt Don't Shop</h1>
</div>
<p class="p-3 text-light page-divider">Help give a home to an animal in need!</p>

<div class="container">
  <div class="row">
    <div class="col-8" id="shelter-list">
      <!-- <h3>Recently Added Shelters</h3> -->
      <div class="home-bubble" id="initial-shelters">
        <% @shelters.each_with_index do |shelter, i| %>
          <% if i < 3 %>
            <div class="shelter-bubble text-secondary">
              <h4 class="shelterName"><%= shelter.name %></h4>
              <p class="shelterAddress"><%= shelter.address.city %>, <%= shelter.address.state %></p>
              <p class="home-learn-more"><%= link_to "Learn more", shelter_path(shelter) %></p>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="home-bubble" id="additional-shelters"></div>

      <div class="home-button"><button class="js-more" data-id="2">See More</button></div>

    </div>

    <!-- make both of these look better.... -->
    <div class="col-4" id="recent-pets">
      <!-- <h3>Newly Adoptable Pets</h3> -->
      <div class="home-bubble" id="initial-pets">
        <% @pets.each_with_index do |pet, i| %>
          <% if i < 3 %>
            <div class="pet-bubble text-secondary">
              <h4 class="petName"><%= pet.name %></h4>
              <p class="petAnimal"><%= pet.animal %></p>
              <p class="petOnwer"><%= pet.owner.class == User ? pet.owner.username : pet.owner.name %></p>
              <p class="home-learn-more"><%= link_to "More Info", pet_path(pet) %></p>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="home-bubble" id="additional-pets"></div>

      <div class="home-button"><button class="js-more" data-id="2">See More</button></div>
    </div>
  </div>
</div>
